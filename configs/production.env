# Production Environment Configuration
# Copy this file to .env and modify as needed

# Telegram Bot Configuration
BOT_TOKEN=your_production_bot_token_here
BOT_WEBHOOK_URL=https://yourdomain.com/webhook
BOT_WEBHOOK_PORT=8080

# Database Configuration
DB_HOST=your_production_db_host
DB_PORT=5432
DB_USER=remnawave_bot
DB_PASSWORD=your_secure_production_password
DB_NAME=remnawave_bot
DB_SSL_MODE=require

# Remnawave API Configuration
REMNAWAVE_API_URL=https://your-production-panel.com/api
REMNAWAVE_API_KEY=your_production_api_key_here
REMNAWAVE_SECRET_KEY=secret_name:secret_value

# Payment Systems (Production)
TRIBUTE_WEBHOOK_URL=https://yourdomain.com/tribute-webhook
YOOKASSA_SHOP_ID=your_production_shop_id
YOOKASSA_SECRET_KEY=your_production_secret_key
YOOKASSA_WEBHOOK_URL=https://yourdomain.com/yookassa-webhook

# Server Configuration
SERVER_PORT=8080
LOG_LEVEL=info
ENVIRONMENT=production

# Admin Configuration
ADMIN_TELEGRAM_IDS=your_admin_telegram_id
MAINTENANCE_MODE=false
MAINTENANCE_AUTO_ENABLE=true

# Security (Production - USE STRONG VALUES!)
JWT_SECRET=your_very_strong_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Monitoring
HEALTH_CHECK_INTERVAL=30s
STATS_CLEANUP_INTERVAL=24h

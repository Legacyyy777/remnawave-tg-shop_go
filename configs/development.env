# Development Environment Configuration
# Copy this file to .env and modify as needed

# Telegram Bot Configuration
BOT_TOKEN=your_development_bot_token_here
BOT_WEBHOOK_URL=
BOT_WEBHOOK_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=remnawave_bot
DB_PASSWORD=remnawave_bot_password
DB_NAME=remnawave_bot
DB_SSL_MODE=disable

# Remnawave API Configuration
REMNAWAVE_API_URL=https://your-dev-panel.com/api
REMNAWAVE_API_KEY=your_dev_api_key_here
REMNAWAVE_SECRET_KEY=

# Payment Systems (Development)
TRIBUTE_WEBHOOK_URL=
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_WEBHOOK_URL=

# Server Configuration
SERVER_PORT=8080
LOG_LEVEL=debug
ENVIRONMENT=development

# Admin Configuration
ADMIN_TELEGRAM_IDS=123456789
MAINTENANCE_MODE=false
MAINTENANCE_AUTO_ENABLE=false

# Security (Development - CHANGE IN PRODUCTION!)
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_32_chars

# Monitoring
HEALTH_CHECK_INTERVAL=30s
STATS_CLEANUP_INTERVAL=24h
